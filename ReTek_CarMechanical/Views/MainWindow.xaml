<Window x:Class="ReTek_CarMechanical.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReTek_CarMechanical"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Ügyfelek" Command="{Binding ClientCommandHandler}"></Button>
            <Button Content="Gépjárművek" Command="{Binding CarCommandHandler}"></Button>
            <Button Content="Szolgáltatások" Command="{Binding ServiceCommandHandler}"></Button>
            <Button Content="Alkatrészek"></Button>
            <Button Content="Munkalap"></Button>
            <DataGrid Margin="10" Name="lvUsers" ItemsSource="{Binding Clients}" AutoGenerateColumns="True" >
                
            </DataGrid>

        </StackPanel>
    </Grid>
</Window>
