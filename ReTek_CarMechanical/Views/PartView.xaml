<Window x:Class="ReTek_CarMechanical.Views.PartView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReTek_CarMechanical.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Margin="0,0,-0.4,0">
            <Label Content="Válassza ki a kívánt alkatrészeket!"></Label>
            <Label Content="Alkatrész neve"></Label>
            <TextBox Text="{Binding PartName,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Label Content="Alketrész ára"></Label>
            <TextBox Text="{Binding PartPrice,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Label Content="Készlet"></Label>
            <TextBox Text="{Binding PartQuantity,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Content="Alkatrészek regisztrálása" Command="{Binding AddNewPartCommandHandler}"></Button>
        </StackPanel>
    </Grid>
</Window>
